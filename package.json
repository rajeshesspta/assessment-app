{
  "name": "assessment-app",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/dev-portal",
    "apps/consumer-portal",
    "apps/consumer-bff",
    "apps/control-plane-api",
    "apps/control-plane-console",
    "apps/control-plane-console-proxy"
  ],
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "dev:full": "npm-run-all --parallel dev dev:consumer:bff dev:consumer",
    "dev:control-plane:api": "npm run dev --workspace control-plane-api",
    "dev:control-plane:proxy": "npm run dev --workspace control-plane-console-proxy",
    "dev:control-plane:console": "npm run dev --workspace control-plane-console",
    "dev:control-plane": "npm-run-all --parallel dev:control-plane:api dev:control-plane:proxy dev:control-plane:console",
    "dev:portal": "npm run dev --workspace dev-portal",
    "build:portal": "npm run build --workspace dev-portal",
    "dev:consumer": "npm run dev --workspace consumer-portal",
    "build:consumer": "npm run build --workspace consumer-portal",
    "dev:consumer:bff": "npm run dev --workspace consumer-bff",
    "build:consumer:bff": "npm run build --workspace consumer-bff",
    "db:seed:init": "tsx scripts/sqlite/seed-init.ts",
    "db:provision": "tsx scripts/sqlite/provision.ts",
    "db:seed": "tsx scripts/sqlite/seed.ts",
    "db:seed:random-data": "tsx scripts/sqlite/seed-random-data.ts",
    "db:bootstrap": "tsx scripts/sqlite/bootstrap.ts",
    "db:clear": "tsx scripts/sqlite/clear.ts",
    "db:migrate": "tsx scripts/sqlite/migrate.ts",
    "db:reset": "tsx scripts/sqlite/reset.ts"
  },
  "dependencies": {
    "@azure/cosmos": "^4.8.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^1.10.2",
    "fastify": "^4.27.2",
    "pino": "^9.0.0",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^2.1.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0",
    "vitest": "^2.1.3",
    "npm-run-all": "^4.1.5"
  }
}
